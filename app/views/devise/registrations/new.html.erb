<div class="hero bg-base-200 min-h-screen">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <div class="text-center lg:text-left">

      
      <p class="py-6">Create a new account to get started with our service. It's quick and easy</p>
    </div>
    <div class="flex-grow w-full max-w-sm shrink-0 p-6">
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <!-- エラーメッセージの表示 -->
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <h1 class="text-5xl font-bold mb-4">Sign up</h1>
        <!-- 名前 -->
        <div class="form-control mb-4">
          <%= f.label :name, class: "label-text" %>
          <%= f.text_field :name, class: "input input-bordered" %>
        </div>

        <!-- パスワード -->
        <div class="form-control mb-4">
          <%= f.label :password, class: "label-text" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class: "input input-bordered" %>
        </div>

        <!-- サインアップボタン -->
        <div class="form-control mt-6">
          <%= f.submit "Sign up", class: "btn btn w-full" %>
        </div>
      <% end %>

      <!-- ログインページへのリンク -->
      <div class="text-center mt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

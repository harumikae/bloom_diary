<h2 style="text-align: center;">「<%= @diary.diarys_title %>」の投稿</h2>

<%= form_with model: [@diary, @post], local: true do |f| %>
  <div>
    <%= f.label :target, "1. 目標・叶えたいこと" %><br>
    <%= f.text_field :target %>
  </div>

  <div>
    <%= f.label :treat, "2. ご褒美" %><br>
    <%= f.text_field :treat %>
  </div>

  <div>
  <% if @post.new_record? %>
  <!-- 新規作成時のボタン -->
    <%= f.submit "皆んなと共有", name: "submit_type", value: "share", class: "btn" %>
    <%= f.submit "自分", name: "submit_type", value: "private", class: "btn" %>
  <% else %>
    <!-- 編集時のボタン -->
    <%= f.submit "保存", class: "btn btn-primary" %>
  <% end %>
  </div>
<% end %>

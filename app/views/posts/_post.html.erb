<div class="post">
  <p>目標: <%= post.target %></p>
  <p>ご褒美: <%= post.treat %></p>

  <% if post.diary.user == current_user %>
    <!-- 編集と削除ボタンを表示 -->
    <%= link_to "編集", edit_diary_post_path(post.diary, post), class: "btn btn-primary" %>
    <%= link_to "削除", destroy_diary_post_path, data: { turbo_method: :delete } %>
  <% end %>
</div>